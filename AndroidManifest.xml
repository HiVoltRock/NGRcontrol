<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.ngr.control"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" />
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    <!-- This is where you lock in landscape mode. If it's annoying to debug, just remove the line an add later 
    		in the activity tag:		android:screenOrientation="landscape"
     -->    
        <activity android:name=".NGRcontrol"
                  android:label="@string/app_name"
                  
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>